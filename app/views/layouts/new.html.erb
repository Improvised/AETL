
<%= form_for @layout, :update => :message, remote: true do |f| %>
  <p>Name : <%= f.text_field :name, :size => "25" %>&nbsp;<span id="message"></span></p>
  <p>Tabloid : <%= f.check_box :tabloid %></p>
  <p>Landscape : <%= f.check_box :landscape %></p>
  <p><%= submit_tag "Create" %></p>
<% end %>
<p><%= link_to "Close", :update => :jobchecklist_layout_id, :url => {:controller => :layouts}, :method => :get, :complete => "Modalbox.hide()", remote: true %></p>
