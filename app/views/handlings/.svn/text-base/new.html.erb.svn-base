<% remote_form_for @handling, :update => :message do |f| %>
  <p>Name : <%= f.text_field :name, :size => "25" %>  <%= submit_tag "Create" %>&nbsp;<span id="message"></span></p>
<% end %>
<p><%= link_to_remote "Close", :update => :handling_id, :url => {:controller => :handlings}, :method => :get, :complete => "Modalbox.hide()" %></p>
